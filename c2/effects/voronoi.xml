<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>voronoi</id>			<!-- Never change the ID.  Change the name instead -->
	<name>Voronoi</name>
	<category>GamesWarp</category>
	<description>Voronoi</description>
	<author>GamesWarp Studio</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp. -->
	<extend-box-horizontal>1</extend-box-horizontal>
	<extend-box-vertical>1</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (samplerBack is referenced at all in the shader) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	
	<!-- Set to true if the effect changes over time, e.g. Noise or Warp effects. -->
	<animated>true</animated>
	
	<!-- Parameters -->
	<parameters>
		<param>
			<name>Voronoi Type</name>
			<description>Use 1.0 or 2.0 for different Voronoi effect. Default = 1.0</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>vtype</uniform>
		</param>
		<param>
			<name>Layer 2</name>
			<description>Use 1 if you want to enable layer 2. Default is 1.0</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>layer2</uniform>
		</param>
		<param>
			<name>Layer 3</name>
			<description>Use 1 if you want to enable layer 3. Default is 1.0</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>layer3</uniform>
		</param>
		<param>
			<name>Layer 1 Thickness</name>
			<description>Use between 0.0 and 1.0 Default is 0.5</description>
			<type>float</type>
			<initial>0.5</initial>
			<uniform>layer1thickness</uniform>
		</param>
		<param>
			<name>Layer 2 Thickness</name>
			<description>Use between 0.0 and 1.0 Default is 0.25</description>
			<type>float</type>
			<initial>0.25</initial>
			<uniform>layer2thickness</uniform>
		</param>
		<param>
			<name>Layer 3 Thickness</name>
			<description>Use between 0.0 and 1.0 Default is 0.125</description>
			<type>float</type>
			<initial>0.125</initial>
			<uniform>layer3thickness</uniform>
		</param>
		<param>
			<name>Layer 1 Zoom Factor</name>
			<description>Use between 1.0 and 10.0 Default is 1.0</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>layer1zoom</uniform>
		</param>
		<param>
			<name>Layer 2 Zoom Factor</name>
			<description>Use between 1.0 and 10.0 Default is 2.0</description>
			<type>float</type>
			<initial>2.0</initial>
			<uniform>layer2zoom</uniform>
		</param>
		<param>
			<name>Layer 3 Zoom Factor</name>
			<description>Use between 1.0 and 10.0 Default is 4.0</description>
			<type>float</type>
			<initial>4.0</initial>
			<uniform>layer3zoom</uniform>
		</param>
		<param>
			<name>Layer 1 Speed</name>
			<description>Use between -10.0 and 10.0 Default is 4.0</description>
			<type>float</type>
			<initial>4.0</initial>
			<uniform>layer1speed</uniform>
		</param>
		<param>
			<name>Layer 2 Speed</name>
			<description>Use between -10.0 and 10.0 Default is 8.0</description>
			<type>float</type>
			<initial>8.0</initial>
			<uniform>layer2speed</uniform>
		</param>
		<param>
			<name>Layer 3 Speed</name>
			<description>Use between -10.0 and 10.0 Default is 16.0</description>
			<type>float</type>
			<initial>16.0</initial>
			<uniform>layer3speed</uniform>
		</param>
		<param>
			<name>Red</name>
			<description>Use range of values from 0 to 10. Default is 10.0</description>
			<type>float</type>
			<initial>10.0</initial>
			<uniform>red</uniform>
		</param>
		<param>
			<name>Green</name>
			<description>Use range of values from 0 to 10. Default is 0.0</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>green</uniform>
		</param>
		<param>
			<name>Blue</name>
			<description>Use range of values from 0 to 10. Default is 10.0</description>
			<type>float</type>
			<initial>10.0</initial>
			<uniform>blue</uniform>
		</param>
	</parameters>
</c2effect>
