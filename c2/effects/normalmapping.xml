<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>normalmapping</id>			<!-- Never change the ID.  Change the name instead -->
	<name>Normal Mapping</name>
	<category>GamesWarp</category>
	<description>Normal Mapping</description>
	<author>GamesWarp Studio</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp. -->
	<extend-box-horizontal>1</extend-box-horizontal>
	<extend-box-vertical>1</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (samplerBack is referenced at all in the shader) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	
	<!-- Set to true if the effect changes over time, e.g. Noise or Warp effects. -->
	<animated>false</animated>
	
	<!-- Parameters -->
	<parameters>
		<param>
			<name>X-Coord</name>
			<description>X coord of mouse point. Use Mouse.X on mouse location. A logic error is still present, so use -1.0 to center the location</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>mseX</uniform>
		</param>
		<param>
			<name>Y-Coord</name>
			<description>Y coord of mouse point. Use LayoutHeight - Mouse.Y for mouse location. The Y-Axis is currently reversed in C2. Use -1.0 to center the location</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>mseY</uniform>
		</param>
		<param>
			<name>Light Flag</name>
			<description>0 = Disable beam of light, 1 = Enable beam of light... Enabled by default</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>lightflag</uniform>
		</param>
		<param>
			<name>Light Depth</name>
			<description>Use values greater than 1.0 and less than 100.0... Default value of 5.0</description>
			<type>float</type>
			<initial>5.0</initial>
			<uniform>lightdepth</uniform>
		</param>
		<param>
			<name>Specularity</name>
			<description>Use values from 1.0 to 500.0... Default value of 128.0</description>
			<type>float</type>
			<initial>128.0</initial>
			<uniform>specularity</uniform>
		</param>
	</parameters>
</c2effect>
