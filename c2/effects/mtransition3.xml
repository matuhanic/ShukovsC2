<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>mtransition3</id>			<!-- A unique ID.  Change this!  Never change the ID after release - change the name instead. -->
	<name>Transition Shape</name>		<!-- The displayed name of the effect -->
	<category>Animated FX</category>	<!-- Any category can be used, but try to use one of: Color, Blend, or Distortion -->
	<description>Transition Shape</description>
	<author>Gigatron</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp.
		 Do not set if not strictly necessay!  These options have a performance impact. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (see comments on background sampling in the .fx file) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	
	<!-- Set to true if the effect changes by itself over time, e.g. Noise or Warp effects. -->
	<animated>true</animated>
	
	<!-- Parameters -->
	<parameters>
	
	<param>
			<name>Distance</name>
			<description>Distance of shape</description>
			<type>float</type>
			<initial>8.0</initial>
			<uniform>duration</uniform>
	</param>
	
	<param>
			<name>Rotation</name>
			<description>Shape Rotation</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>vbl_wait</uniform>
	</param>
	
	<param>
			<name>Shape Points</name>
			<description>Shape Points Number</description>
			<type>float</type>
			<initial>5.0</initial>
			<uniform>shp</uniform>
	</param>
	
	<param>
			<name>Shape X</name>
			<description>Shape X Point</description>
			<type>float</type>
			<initial>0.2</initial>
			<uniform>xx</uniform>
	</param>
	
	<param>
			<name>Shape Y</name>
			<description>Shape Y Point</description>
			<type>float</type>
			<initial>0.4</initial>
			<uniform>yy</uniform>
	</param>
	
	<param>
			<name>red</name>
			<description>red</description>
			<type>float</type>
			<initial>0.7</initial>
			<uniform>rr</uniform>
		</param>
		
		<param>
			<name>green</name>
			<description>green</description>
			<type>float</type>
			<initial>0.9</initial>
			<uniform>gg</uniform>
		</param>
		
		<param>
			<name>blue</name>
			<description>blue</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>bb</uniform>
		</param>
		 
	</parameters>
	
</c2effect>
