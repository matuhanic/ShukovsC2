<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>rotrays</id>			<!-- A unique ID.  Change this!  Never change the ID after release - change the name instead. -->
	<name>Rays Rotation Fx</name>		<!-- The displayed name of the effect -->
	<category>Animated FX</category>	<!-- Any category can be used, but try to use one of: Color, Blend, or Distortion -->
	<description>Rays Rotation Fx</description>
	<author>Gigatron</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp.
		 Do not set if not strictly necessay!  These options have a performance impact. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (see comments on background sampling in the .fx file) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	
	<!-- Set to true if the effect changes by itself over time, e.g. Noise or Warp effects. -->
	<animated>true</animated>
	
	<!-- Parameters -->
	<parameters>
	
	
	<param>
			<name>Raycount</name>
			<description>Numbers Of Rays</description>
			<type>float</type>
			<initial>10.0</initial>
			<uniform>rays</uniform>
	</param>
	<param>
			<name>Textured</name>
			<description>Textured Yes 1/ No/0</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>textured</uniform>
	</param>
	<param>
			<name>Speed</name>
			<description>Speed Of Rays Rotation</description>
			<type>percent</type>
			<initial>1.0</initial>
			<uniform>speed</uniform>
	</param>
	<param>
			<name>Direction</name>
			<description>Direction Of Rays Rotated Rays 1/Right 0/Fixed -1/Left</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>dir</uniform>
	</param>	
	
	<param>
			<name>Smoothness</name>
			<description>Smoothness Factor</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>sfactor</uniform>
	</param>

	<param>
			<name>Line Color Red</name>
			<description>Line Color Red Component</description>
			<type>float</type>
			<initial>0.8</initial>
			<uniform>lred</uniform>
	</param>
	
	<param>
			<name>Line Color Green</name>
			<description>Line Color Green Component</description>
			<type>float</type>
			<initial>0.8</initial>
			<uniform>lgreen</uniform>
	</param>
	<param>
			<name>Line Color Blue</name>
			<description>Line Color Blue Component</description>
			<type>float</type>
			<initial>0.2</initial>
			<uniform>lblue</uniform>
	</param>
	<param>
			<name>BG Color Red</name>
			<description>Background Color Red Component</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>bred</uniform>
	</param>
	<param>
			<name>BG Color Green</name>
			<description>Background Color Green Component</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>bgreen</uniform>
	</param>
	<param>
			<name>BG Color Blue</name>
			<description>Background Color Blue Component</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>bblue</uniform>
	</param>
	
	<param>
			<name>X position</name>
			<description>X position Of Rays</description>
			<type>percent</type>
			<initial>1.3</initial>
			<uniform>pos_x</uniform>
	</param>
	<param>
			<name>Y position</name>
			<description>Y position Of Rays</description>
			<type>percent</type>
			<initial>1.7</initial>
			<uniform>pos_y</uniform>
	</param>
	<param>
			<name>Center Radius</name>
			<description>Radius of the Center Circle</description>
			<type>float</type>
			<initial>0.10</initial>
			<uniform>sun_radius</uniform>
	</param>
	
	
	</parameters>
	
</c2effect>
