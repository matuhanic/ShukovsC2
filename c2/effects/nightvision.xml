<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>nightvision</id>			<!-- Never change the ID.  Change the name instead -->
	<name>nightvision</name>
	<category>Color</category>
	<description>Green nightvision effect with faded edges around the screen.</description>
	<author>chrisbrobs(brad larson vignette)</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (samplerBack is referenced at all in the shader) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	
	<!-- Set to true if the effect changes over time, e.g. Noise or Warp effects. -->
	<animated>false</animated>
	
	<!-- Parameters -->
	<parameters>
		<param>
			<name>ScopeStart</name>
			<description>Start radius of the effect, from 0 (center) to 100 (edge).</description>
			<type>percent</type>
			<initial>0.1</initial>
			<uniform>scopeStart</uniform>
		</param>
		<param>
			<name>ScopeEnd</name>
			<description>End radius of the effect, from 0 (center) to 100 (edge).</description>
			<type>percent</type>
			<initial>0.60</initial>
			<uniform>scopeEnd</uniform>
		</param>
		<param>
			<name>intensity</name>
			<description>intensity of the effect, from 0  to 100 or beyond.</description>
			<type>percent</type>
			<initial>1.2</initial>
			<uniform>intensity</uniform>
		</param>
	</parameters>
</c2effect>
