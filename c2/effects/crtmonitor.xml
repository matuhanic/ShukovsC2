<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>crtmonitorfx</id>			<!-- A unique ID.  Change this!  Never change the ID after release - change the name instead. -->
	<name>CRT MONITOR FX</name>		<!-- The displayed name of the effect -->
	<category>Animated FX</category>	<!-- Any category can be used, but try to use one of: Color, Blend, or Distortion -->
	<description>CRT MONITOR FX</description>
	<author>Gigatron</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp.
		 Do not set if not strictly necessay!  These options have a performance impact. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (see comments on background sampling in the .fx file) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	<preserves-opaqueness>true</preserves-opaqueness>
	<!-- Set to true if the effect changes by itself over time, e.g. Noise or Warp effects. -->
	<animated>true</animated>
	
	<!-- Parameters -->
	<parameters>
		
	<param>
			<name>Red</name>
			<description>Red Color Component</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>red</uniform>
	</param>
	<param>
			<name>Green</name>
			<description>Green Color Component</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>green</uniform>
	</param>
	<param>
			<name>Blue</name>
			<description>Blue Color Component</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>blue</uniform>
	</param>
	
	<param>
			<name>Grid X</name>
			<description>X Grid Factor</description>
			<type>float</type>
			<initial>640.0</initial>
			<uniform>gx</uniform>
	</param>
	<param>
			<name>Grid Y</name>
			<description>Y Grid Factor</description>
			<type>float</type>
			<initial>240.0</initial>
			<uniform>gy</uniform>
	</param>
	<param>
			<name>Grid Intensity</name>
			<description>Grid color intensity</description>
			<type>float</type>
			<initial>1.2</initial>
			<uniform>gintensity</uniform>
	</param>
	<param>
			<name>MonoChrome</name>
			<description>Enable disable Monochrome 1/0</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>mono</uniform>
	</param>
	
 
 	</parameters>
	
</c2effect>