<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>mariocube2</id>			<!-- A unique ID.  Change this!  Never change the ID after release - change the name instead. -->
	<name>Mario Cube FX #2</name>		<!-- The displayed name of the effect -->
	<category>Animated FX</category>	<!-- Any category can be used, but try to use one of: Color, Blend, or Distortion -->
	<description>Mario Cube FX inside scalable box </description>
	<author>Gigatron</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp.
		 Do not set if not strictly necessay!  These options have a performance impact. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (see comments on background sampling in the .fx file) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	<preserves-opaqueness>true</preserves-opaqueness>
	<!-- Set to true if the effect changes by itself over time, e.g. Noise or Warp effects. -->
	<animated>true</animated>
	
	<!-- Parameters -->
	<parameters>
		
	<param>
			<name>X Size</name>
			<description>Box X Size</description>
			<type>float</type>
			<initial>0.45</initial>
			<uniform>p1</uniform>
	</param>
	<param>
			<name>Y Size</name>
			<description>Box Y Size</description>
			<type>float</type>
			<initial>0.45</initial>
			<uniform>p2</uniform>
	</param>
	<param>
			<name>Z Size</name>
			<description>Box Z Size</description>
			<type>float</type>
			<initial>0.45</initial>
			<uniform>p3</uniform>
	</param>
	<param>
			<name>X_Rotation</name>
			<description>X Rotation</description>
			<type>float</type>
			<initial>0.5</initial>
			<uniform>rot_x</uniform>
		</param>
		<param>
			<name>Y_Rotation</name>
			<description>Y Rotation</description>
			<type>float</type>
			<initial>0.5</initial>
			<uniform>rot_y</uniform>
		</param>
		<param>
			<name>Z_Rotation</name>
			<description>Z Rotation</description>
			<type>float</type>
			<initial>0.5</initial>
			<uniform>rot_z</uniform>
		</param>
		 
		<param>
			<name>Zoom_Factor</name>
			<description>Zoom Factor</description>
			<type>float</type>
			<initial>-5.0</initial>
			<uniform>zoom</uniform>
		</param>
 
 	</parameters>
	
</c2effect>