<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>Depthdisplace</id>			<!-- Never change the ID.  Change the name instead -->
	<name>Depthdisplace</name>
	<category>Distortion</category>
	<description>texture displacement using a depth map.</description>
	<author>chrisbrobs.modification of the original CC effect by david clarke</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (samplerBack is referenced at all in the shader) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>true</cross-sampling>
	
	<!-- Set to true if the effect changes over time, e.g. Noise or Warp effects. -->
	<animated>false</animated>
	
		<!-- Parameters -->
	<parameters>
		<param>
			<name>XdisplaceAmount</name>
			<description>X displace amount.</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>XdisplaceAmount</uniform>
		</param>
					<param>
			<name>YdisplaceAmount</name>
			<description>Y displace amount.</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>YdisplaceAmount</uniform>
		</param>
			<param>
			<name>intensity</name>
			<description>increase the intensity of the displacement. 0 to 24, default 3.0 </description>
			<type>float</type>
			<initial>3</initial>
			<uniform>intensity</uniform>
		</param>
	</parameters>
	
</c2effect>
