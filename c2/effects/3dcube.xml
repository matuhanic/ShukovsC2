<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>3dcube</id>			<!-- A unique ID.  Change this!  Never change the ID after release - change the name instead. -->
	<name>3D Cube</name>		<!-- The displayed name of the effect -->
	<category>Animated FX</category>	<!-- Any category can be used, but try to use one of: Color, Blend, or Distortion -->
	<description>3D Cube Map FX</description>
	<author>Gigatron</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp.
		 Do not set if not strictly necessay!  These options have a performance impact. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (see comments on background sampling in the .fx file) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>true</cross-sampling>
	
	<!-- Set to true if the effect changes by itself over time, e.g. Noise or Warp effects. -->
	<animated>true</animated>
	
	<!-- Parameters -->
	<parameters>
		<!-- An example parameter, with the following tags:
			name: the displayed name of the parameter
			description: appears at the bottom of the properties bar when selected
			type: either float or percent.  Percent is just a float but displayed x 100.
			initial: initial value of the parameter
			uniform: name of the corresponding uniform variable in the .fx file.
			
			You can add as many parameters as you like.
		-->
				
	 	 <param>
			<name>X_Rotation</name>
			<description>X Rotation</description>
			<type>float</type>
			<initial>0.5</initial>
			<uniform>rot_x</uniform>
		</param>
		<param>
			<name>Y_Rotation</name>
			<description>Y Rotation</description>
			<type>float</type>
			<initial>0.5</initial>
			<uniform>rot_y</uniform>
		</param>
		<param>
			<name>Z_Rotation</name>
			<description>Z Rotation</description>
			<type>float</type>
			<initial>0.5</initial>
			<uniform>rot_z</uniform>
		</param> 
		<param>
			<name>Zoom_Factor</name>
			<description>Zoom Factor</description>
			<type>float</type>
			<initial>-5.0</initial>
			<uniform>zoom</uniform>
		</param>
		<param>
			<name>Color Intensity</name>
			<description>Intensity Of Global Color</description>
			<type>float</type>
			<initial>1.0</initial>
			<uniform>intensity</uniform>
		</param>
		<param>
			<name>BG Red</name>
			<description>Background Red Component</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>bg_red</uniform>
		</param> 
		<param>
			<name>BG Green</name>
			<description>Background Green Component</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>bg_green</uniform>
		</param> 
		
		<param>
			<name>BG Blue</name>
			<description>Background Blue Component</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>bg_blue</uniform>
		</param> 

		
		
		
	</parameters>
	
</c2effect>
